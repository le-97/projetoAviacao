# Production Environment Configuration
# Copy this to .env and fill in the values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=production
DEBUG=false

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this
API_KEY_PREFIX=avcomp_

# Database
DATABASE_URL=sqlite:///data/aviation_compliance.db
# For PostgreSQL: postgresql://username:password@localhost:5432/aviation_compliance

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# PostgreSQL (if using)
POSTGRES_USER=aviation_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=aviation_compliance

# CORS and Security
CORS_ORIGINS=https://your-frontend.com,https://your-app.com
ALLOWED_HOSTS=your-api.com,localhost,127.0.0.1

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your-grafana-password

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/aviation-api.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Build Information (for Docker)
BUILD_DATE=2024-01-01T00:00:00Z
VERSION=1.0.0
VCS_REF=main

# External Services
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# SSL/TLS (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem