{
  "openapi": "3.0.0",
  "info": {
    "title": "Compliance Microservice API",
    "version": "1.0.0"
  },
  "paths": {
    "/check-compliance": {
      "get": {
        "summary": "Check aircraft compliance",
        "parameters": [
          {
            "name": "model",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "country",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Compliance report",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ComplianceReport"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ComplianceReport": {
        "type": "object",
        "properties": {
          "aircraft_model": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "pending_requirements": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
