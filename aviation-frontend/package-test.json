{
  "name": "aviation-frontend-tests",
  "version": "1.0.0",
  "description": "Jest tests for Aviation Compliance Frontend",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:components": "cross-env NODE_ENV=test jest --testMatch='**/components/**/*.test.{js,jsx,ts,tsx}'",
    "test:pages": "cross-env NODE_ENV=test jest --testMatch='**/pages/**/*.test.{js,jsx,ts,tsx}'",
    "test:integration": "cross-env NODE_ENV=test jest --testMatch='**/integration/**/*.test.{js,jsx,ts,tsx}'",
    "test:contracts": "cross-env NODE_ENV=test jest --testMatch='**/tests/api-contracts.test.{js,jsx,ts,tsx}'",
    "test:e2e": "cross-env NODE_ENV=test jest --testMatch='**/e2e/**/*.test.{js,jsx,ts,tsx}'",
    "test:all": "npm run test:components && npm run test:integration && npm run test:contracts",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "jest-junit": "^16.0.0",
    "jest-html-reporters": "^3.1.5",
    "axios-mock-adapter": "^1.22.0",
    "msw": "^2.0.11",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "identity-obj-proxy": "^3.0.0",
    "cross-env": "^7.0.3",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.23.0",
    "babel-jest": "^29.7.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "testMatch": [
      "**/__tests__/**/*.{js,jsx,ts,tsx}",
      "**/src/**/*.test.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx",
      "!src/setupTests.js",
      "!**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "reporters": [
      "default",
      "jest-junit",
      ["jest-html-reporters", {
        "publicPath": "./coverage/html-report",
        "filename": "report.html",
        "expand": true
      }]
    ],
    "testTimeout": 10000,
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": { "node": "current" } }],
      ["@babel/preset-react", { "runtime": "automatic" }],
      "@babel/preset-typescript"
    ]
  }
}